<config>
  <modules>
    <Sendsmaily_Sync>
      <version>1.2</version>
    </Sendsmaily_Sync>
  </modules>

  <global>
    <models>
      <sync>
        <class>Sendsmaily_Sync_Model</class>
      </sync>
    </models>

    <blocks>
      <adminhtml>
        <rewrite>
          <newsletter_subscriber_grid>Sendsmaily_Sync_Block_Newsletter_Subscriber_Grid</newsletter_subscriber_grid>
        </rewrite>
      </adminhtml>
    </blocks>

    <helpers>
      <sync>
        <class>Sendsmaily_Sync_Helper</class>
      </sync>
    </helpers>
  </global>

  <default>
    <newsletter>
      <sendsmaily>
        <sync_period>30 1 * * *</sync_period>
      </sendsmaily>
    </newsletter>
  </default>

  <crontab>
    <jobs>
      <sendsmaily_sync>
        <schedule><config_path>newsletter/sendsmaily/sync_period</config_path></schedule>
        <run><model>sync/observer::cron</model></run>
      </sendsmaily_sync>
    </jobs>
  </crontab>

  <admin>
    <routers>
      <adminhtml>
        <args>
          <modules>
            <sendsmaily_sync before="Mage_Adminhtml">Sendsmaily_Sync</sendsmaily_sync>
          </modules>
        </args>
      </adminhtml>
    </routers>

    <translate>
      <modules>
        <Sendsmaily_Sync>
          <files>
            <default>Sendsmaily_Sync.csv</default>
          </files>
        </Sendsmaily_Sync>
      </modules>
    </translate>
  </admin>
</config>
